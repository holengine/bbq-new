<%= form_for(@event, data: { turbo: false }) do |f| %>
  <%= render partial: 'partials/form_errors', locals: { model: @event } %>

  <div class="form-group mb-2">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group mb-2">
    <%= f.label :address %>
    <%= f.text_field :address, class: 'form-control' %>
  </div>

  <div class="form-group mb-2">
    <%= f.label :datetime %>
    <p><%= f.datetime_select :datetime, class: 'form-control' %></p>
  </div>

  <div class="form-group mb-2">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :pincode %>
    <%= f.text_field :pincode, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit t('forms.save'), class: 'btn btn-primary' %>
    <%= t('forms.or') %> <%= link_to t('forms.back'), :back %>
  </div>
<% end %>