<% image_footer = "#{t('photo.added')}: #{render partial: "users/user", object: photo.user}"%>

<% if current_user_can_edit?(photo) %>
  <% image_footer += link_to('Удалить фотографию',
                             event_photo_path(photo.event, photo),
                             data: { 'turbo-confirm': t('.destroy_confirm'), turbo_method: :delete },
                             class:'btn btn-danger'
  ) %>
<% end %>

<%= link_to image_tag(photo.photo.thumb.url, content: image_footer), photo.photo.url, class: 'col-sm-4 event-photo' %>

