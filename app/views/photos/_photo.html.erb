<% image_title = "#{t('photo.photo')}: #{@event.title}" %>
<% image_footer = "#{t('photo.added')}: #{render partial: 'users/user_description',
                                    locals: { photo: photo },
                                    class: 'description-photo'}"
%>

<div class="event-photo">
  <%= link_to image_tag(photo.photo.thumb.url), photo.photo.url,
              data: { toggle: 'lightbox',
                      title: image_title,
                      footer: image_footer
              },
              class: 'col-sm-4'
  %>
</div>