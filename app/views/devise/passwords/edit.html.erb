<div class="row justify-content-center">
  <div class="col-md-4">
    <h2 class="text-center">
      <h2 class="text-center"><%= t('.change_your_password') %></h2>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>
        <div class="form-group mb-2">
          <%= f.label :password, t('.new_password') %><br />
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password",  placeholder: t('registrations.password_helper_placeholder', count: @minimum_password_length), class: 'form-control' %>
        </div>
        <div class="form-group mb-2">
          <%= f.label :password_confirmation, t('.confirm_new_password') %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password",  placeholder: t('registrations.password_helper_placeholder', count: @minimum_password_length), class: 'form-control' %>
        </div>
        <div class="actions">
          <%= f.submit t('.change_my_password'), class: 'btn btn-primary btn-block login-button' %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
