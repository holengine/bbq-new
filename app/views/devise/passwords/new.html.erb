<div class="row justify-content-center">
  <div class="col-md-4">
    <h2 class="text-center"><%= t('.forgot_your_password') %></h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { "data-turbo": "false", method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="form-group mb-2">
        <%= f.label :email, class: 'cols-sm-2 control-label'%>
        <div class="input-group">
          <span class="input-group-text"><i class="bi bi-envelope"></i></span>
          <%= f.email_field :email, autocomplete: "email", placeholder: t('registrations.email_placeholder'), class: 'form-control' %>
        </div>
      </div>
      <div class="actions">
        <%= f.submit t('.send_me_reset_password_instructions'), class: 'btn btn-primary btn-block login-button' %>
      </div>
    <% end %>
  </div>
</div>
