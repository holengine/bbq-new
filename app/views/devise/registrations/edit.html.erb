<div class="row justify-content-center">
  <div class="col-md-4">
    <h2 class="text-center"><%= t('registrations.change_password') %></h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: true, data: { turbo: false } }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group mb-2">
        <%= f.label :email, class: 'cols-sm-2 control-label'%>
        <div class="input-group">
          <span class="input-group-text"><i class="bi bi-envelope"></i></span>
          <%= f.email_field :email, autocomplete: "email", placeholder: t('registrations.email_placeholder'), class: 'form-control' %>
        </div>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>
          <%= t('registrations.confirmation') %>
          <%= resource.unconfirmed_email %>
        </div>
      <% end %>

      <div class="form-group mb-2">
        <p><%= t('registrations.password_helper') %></p>
        <%= f.label :password, class: 'cols-sm-2 control-label'%>
        <div class="input">
          <%= f.password_field :password, autocomplete: "new-password", placeholder: t('registrations.password_helper_placeholder', count: @minimum_password_length), class: 'form-control' %>
        </div>
      </div>
      <div class="form-group mb-2">
        <%= f.label :password_confirmation, class: 'cols-sm-2 control-label'%>
        <div class="input">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: t('registrations.password_helper_placeholder', count: @minimum_password_length), class: 'form-control' %>
        </div>
      </div>
      <div class="form-group mb-3">
        <%= f.label :current_password, class: 'cols-sm-2 control-label'%>
        <div class="input">
          <%= f.password_field :current_password, autocomplete: "current_password", placeholder: t('registrations.password_helper_placeholder', count: @minimum_password_length), class: 'form-control' %>
        </div>
      </div>
      <div class="actions mb-2">
        <%= f.submit t('forms.save'), class: 'btn btn-primary' %> <%= t('forms.or') %> <%= link_to t('forms.back'), :back %>
      </div>
    <% end %>
    <%= button_to t('forms.delete_account'), registration_path(resource_name),
                  data: { confirm: t('registrations.destroy_confirm') },
                  method: :delete,
                  class: 'btn btn-danger' %>
  </div>


</div>